<Window x:Class="SampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock TextWrapping="Wrap" Text="メッセージを入力してください"/>
            <TextBox x:Name="MessageTextBox" Height="23" TextWrapping="Wrap" Width="120"/>
        </StackPanel>
        <StackPanel DockPanel.Dock ="Bottom"  HorizontalAlignment="Right"  VerticalAlignment="Bottom"  Orientation="Horizontal" Margin="5">
            <Button x:Name="okButton" Content="OK" Width="75" Margin="5" Click="okButton_Click"/>
            <Button x:Name="cancelButton" Content="Cancel" Width="75" Margin="5" Click="cancelButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
